<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ArcProgress">
        <attr name="arc_indeterminate" format="boolean" />     <!--不确定进度-->
        <attr name="arc_progress" format="integer" />
        <attr name="arc_finished_start_angle" format="float" />
        <attr name="arc_stroke_width" format="dimension" />
        <attr name="arc_max" format="integer" />
        <attr name="arc_total_sweep_angle" format="integer" />
        <attr name="arc_unfinished_color" format="color" />
        <attr name="arc_finished_color" format="color" />
    </declare-styleable>

    <declare-styleable name="PieChart">
        <attr name="pie_chart_finished_start_angle" format="float" />
        <attr name="pie_chart_stroke_width" format="dimension" />
        <attr name="pie_chart_max" format="integer" />
    </declare-styleable>
</resources>